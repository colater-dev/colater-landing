<!-- Problem Section -->
<section class="section" id="problem">
  <div class="max-w-6xl mx-auto">
    <!-- Eyebrow + Headline -->
    <div class="text-center max-w-2xl mx-auto mb-16" data-animate>
      <p class="text-sm font-semibold text-primary uppercase tracking-wider mb-4">The Problem</p>
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold tracking-tight mb-6">
        Design agencies weren't built for startups
